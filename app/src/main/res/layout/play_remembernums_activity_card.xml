<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <ImageView
        android:id="@+id/signimage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/remembericon"/>


    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Start"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/digit_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_below="@id/start_button"
        android:layout_centerHorizontal="true"
        android:paddingTop="32dp" />

    <EditText
        android:id="@+id/user_input_edit_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="  Enter number"
        android:background="@drawable/bottom_background"
        android:textColorHint="@color/black"
        android:inputType="number"
        android:layout_below="@id/digit_text_view"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp" />

    <Button
        android:id="@+id/check_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:layout_below="@id/user_input_edit_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

</RelativeLayout>
